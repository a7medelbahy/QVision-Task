<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QVision_Task</title>
<link href="~/lib/fontawesome-iconpicker/css/fontawesome-iconpicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QVision_Task.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="AllProducts"><img src="~/assets/brand-colored.png" class="img-fluid" alt="logo" title="Q-Vision" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                    <ul class="navbar-nav  ms-auto">
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       
                        @if (User.Identity.IsAuthenticated == false)
                        {
                            <li class="btn btn-primary"><a class="nav-link text-white" href="/account/regist">Sign Up</a></li>
                            <li class="btn btn-primary ms-2 px-2 py-"><a class="nav-link text-white" href="/account/login">Log In</a></li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Product" asp-action="AllProducts">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Product" asp-action="AddProduct">Add Product</a>
                            </li>
                            <button class="btn btn-primary">@User.Identity.Name</button>
                            <li class="btn btn-primary ms-2 px-2 py-1"><a class="nav-link text-white" href="/account/logout">Log Out</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="page-header d-flex justify-content-center align-items-center">
            <h3 class="display-3 text-white fw-bolder">Q-Vision</h3>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white py-3 text-center">
        <div class="container fs-5 fw-bold">
            &copy; 2023 - QVision_Task - Ahmed Elbahy
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
