@model QVision_Task.Models.Product

@{
    ViewData["Title"] = "UpdateProduct";
}

<h1 class="text-center pt-5 pb-3">Update Product</h1>

<h4>Product Details</h4>
<hr />
<div class="container">
        <form asp-action="UpdateProduct">
            <input type="hidden" asp-for="Id" />
        <div class="row justify-content-center align-items-center gy-4">
            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="StockQuantity" class="control-label"></label>
                <input asp-for="StockQuantity" class="form-control" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 d-flex justify-content-center align-items-center gap-2">
                <input type="submit" value="Update" class="btn btn-primary" />
                <div>
                    <a class="btn btn-primary" asp-action="AllProducts" asp-controller="Product">Back to List</a>
                </div>
            </div>
        </div>
        </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
